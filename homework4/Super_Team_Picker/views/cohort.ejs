<%- include("./partials/header") %>

    <form style="border: 1px solid lightgrey; padding: 19px;" action="/quiz" method="POST">

        <h2 class=""> <%= cohort.name %> </h2>
        
        <%= cohort.members %>

        <hr>
        
        <div class="form-group mb-4 ">
            <label>Method</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="method1" id="exampleRadios1" value="1">
                <label class="form-check-label" for="exampleRadios1">
                Team Count
                </label>
            </div>    
            <div class="form-check">
                <input class="form-check-input" type="radio" name="method1" id="exampleRadios2" value="2">
                <label class="form-check-label" for="exampleRadios2">
                Number Per Team
                </label>
            </div>    
        </div>

        <div class="form-group mb-4 ">
            <label for="quantity">Quantity</label>
            <textarea class="form-control" id="quantity" rows="1"></textarea>
        </div>

        <input type="submit" style="padding: 5px;" class="btn btn-outline-primary btn-lg btn-block" value="Assign Team">

    </form>

<%- include("./partials/footer") %>
